#include<stdio.h>
int main()
{
	void input(int*);
	void max_min_value(int*);
	void output(int*);
	int number[10];
	input(number);
	max_min_value(number);
	output(number);
	return 0;
}
void input(int* number)
{
	int i;
	printf("请输入10个数:");
	for (i = 0; i < 10; i++)
		scanf_s("%d", &number[i]);
}
void max_min_value(int* number)
{
	int* max, * min, * p, temp;
	max = min = number;
	for (p = number + 1; p < number + 10; p++)
		if (*p < *min)min = p;   //比较p和min指向的数的大小，使min指向最小数
	temp= number[0];
	number[0] = *min;
	*min = temp;
	//将最小数放在第一位
	for (p = number + 1; p < number + 10; p++)
		if (*p > *max)max = p;  //比较p和max指向数的大小，使max指向最大数
	temp = number[9];
	number[9] = *max;
	*max = temp;
}
void output(int* number)
{
	int* p;
	printf("它们是：");
		for (p = number; p < number + 10; p++)
			printf("%d", *p);
	printf("\n");
}
